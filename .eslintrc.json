{
  "env": {
    "node": true,
    "commonjs": true,
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["off"],
    //"quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "quotes": [2, "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-console": ["off"]
  },
  "globals": {
    "Handlebars": false,
    "dataSource": true
  }
}
