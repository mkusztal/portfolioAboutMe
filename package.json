{
  "name": "myfs-portfolio",
  "version": "1.0.0",
  "description": "My Full Stack Website",
  "main": "index.tsx",
  "author": "Maciej Kusztal",
  "license": "ISC",
  "dependencies": {
    "@emailjs/browser": "^3.10.0",
    "bcrypt": "^5.0.1",
    "commitlint": "^18.4.3",
    "connect-mongo": "^4.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "font-awesome": "^4.7.0",
    "fs": "^0.0.1-security",
    "jest": "^29.0.3",
    "mongo-sanitize": "^1.1.0",
    "mongodb": "^6.2.0",
    "mongoose": "^6.6.1",
    "multer": "^1.4.5-lts.1",
    "node-modules": "^0.0.1",
    "react-icons": "^4.6.0"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "scripts": {
    "start": "npx nodemon server.js",
    "build": "cd client && npm install && npm run build",
    "test": "jest",
    "lint": "npm run lint:code",
    "lint:code": "eslint --ext=.js,.jsx,.ts,.tsx --color ./src/",
    "lint:code:fix": "eslint --ext=.js,.jsx,.ts,.tsx --color ./src/",
    "lint:code:staged": "eslint --ext=.js,.jsx,.ts,.tsx --color --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "CI=true npm test"
    }
  },
  "lint-staged": {
    "*.{js, jsx, ts,tsx}": [
      "npm run lint:code:staged",
      "prettier-standard"
    ]
  }
}
